<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="env_adjust_snapshot" title="個人的な光源">
	<layout_stack name="outer_stack">
		<layout_panel name="env_controls">
			<layout_stack name="settings_stack">
				<layout_panel name="lp_1">
					<text name="ambient_lbl">
						周囲:
					</text>
					<text name="blue_horizon_lbl">
						青のホライズン:
					</text>
					<text name="blue_density_lbl">
						青の濃度:
					</text>
					<button label="リセット" tool_tip="閉じて共有された景観にリセットする" name="btn_reset"/>
					<text name="sun_color_lbl">
						太陽の色:
					</text>
					<text name="cloud_color_lbl">
						雲の色:
					</text>
					<text name="cloud_map_label">
						雲の画像:
					</text>
					<text name="water_map_label">
						水面の画像:
					</text>
				</layout_panel>
				<layout_panel name="lp_2">
					<text name="haze_horizon_label">
						霞の地平線:
					</text>
					<slider initial_value="0" name="haze_horizon"/>
					<text name="haze_density_label">
						靄の濃度:
					</text>
					<slider initial_value="0" name="haze_density"/>
					<text name="cloud_coverage_label">
						雲の量:
					</text>
					<slider initial_value="0" name="cloud_coverage"/>
					<text name="cloud_scale_label">
						雲のスケール:
					</text>
					<slider initial_value="0" name="cloud_scale"/>
					<text name="scene_gamma_label">
						シーンのガンマ値:
					</text>
					<slider initial_value="0" name="scene_gamma"/>
				</layout_panel>
				<layout_panel name="lp_3">
					<text name="label">
						太陽:
					</text>
					<text name="sun_azimuth_label">
						方位角:
					</text>
					<slider initial_value="0" name="sun_azimuth"/>
					<text name="sun_elevation_label">
						標高:
					</text>
					<slider initial_value="0" name="sun_elevation"/>
					<check_box label="ビーコンを表示" name="sunbeacon"/>
					<text name="scale_label">
						スケール:
					</text>
					<slider initial_value="0" name="sun_scale"/>
					<text name="glow_focus_label">
						グローフォーカス:
					</text>
					<slider initial_value="0" name="glow_focus"/>
					<text name="glow_size_label">
						グローサイズ:
					</text>
					<slider initial_value="0" name="glow_size"/>
					<text name="star_brightness_label">
						星の輝度:
					</text>
					<slider initial_value="0" name="star_brightness"/>
				</layout_panel>
				<layout_panel name="lp_4">
					<text name="label">
						月:
					</text>
					<text name="moon_azimuth_label">
						方位角:
					</text>
					<slider initial_value="0" name="moon_azimuth"/>
					<text name="moon_elevation_label">
						標高:
					</text>
					<slider initial_value="0" name="moon_elevation"/>
					<check_box label="ビーコンを表示" name="moonbeacon"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
