<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
	 background_visible="true"
     bevel_style="in"
     bg_alpha_color="black"
     follows="top|left|right"
     height="24"
     label="im_header"
	 layout="topleft"
     name="im_header"
     width="310">
	<avatar_icon
         follows="left"
         height="18"
         image_name="Generic_Person"
         layout="topleft"
         left="3"
         mouse_opaque="true"
         name="avatar_icon"
         top="3"
         width="18" />
    <text_editor
      allow_scroll="false"
      v_pad = "7"
      read_only = "true"
      follows="left|right"
      font.style="BOLD"
      height="24"
      layout="topleft"
      left_pad="5"
      right="-120"
      name="user_name"
      text_color="white"
      bg_readonly_color="black"
      top="0"
      use_ellipses="true"
      valign="bottom" 
      value="Ericag Vader" />
    <text
            font="SansSerifSmall"
         follows="right"
         halign="right"
         height="13"
         layout="topleft"
         left_pad="5"
     name="time_box"
     right="-5"
     top="8"
         value="23:30"
         width="110" />
</panel>
