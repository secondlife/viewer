				name="shape_mouth_param_list"
				top="0"
				width="303" />
		</accordion_tab>
		<accordion_tab
			layout="topleft"
			min_height="150"
			name="shape_chin_tab"
            fit_panel="false"
			title="Chin">
           <scrolling_panel_list
                layout="topleft"
				follows="all"
				left="0"
				name="shape_chin_param_list"
				top="0"
				width="303" />
		</accordion_tab>
		<accordion_tab
			layout="topleft"
			min_height="150"
			name="shape_torso_tab"
            fit_panel="false"
			title="Torso">
           <scrolling_panel_list
                layout="topleft"
				follows="all"
				left="0"
				name="shape_torso_param_list"
				top="0"
				width="303" />
		</accordion_tab>
		<accordion_tab
			layout="topleft"
			min_height="150"
			name="shape_legs_tab"
            fit_panel="false"
			title="Legs">
           <scrolling_panel_list
                layout="topleft"
				follows="all"
				left="0"
				name="shape_legs_param_list"
				top="0"
				width="303" />
		</accordion_tab>
	</accordion>
    </panel>
</panel>

