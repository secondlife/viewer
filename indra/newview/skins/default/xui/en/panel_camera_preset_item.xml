<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="top|right|left"
 height="20"
 layout="topleft"
 left="0"
 name="camera_preset_item"
 top="0"
 width="280">
    <icon
     follows="top|right|left"
     height="20"
     image_name="ListItem_Over"
     layout="topleft"
     left="0"
     name="hovered_icon"
     top="0"
     visible="false"
     width="380" />
    <icon
     height="20"
     follows="top|right|left"
     image_name="ListItem_Select"
     layout="topleft"
     left="0"
     name="selected_icon"
     top="0"
     visible="false"
     width="380" />
    <text
     follows="left"
     height="20"
     layout="topleft"
     left="10"
     parse_urls="false"
     use_ellipses="true"
     name="preset_name"
     text_color="White"
     top="2"
     value="Default"
     width="159" />
    <button
     follows="right"
     image_selected="TrashItem_Off"
     image_pressed="TrashItem_Off"
     image_unselected="TrashItem_Off"
     is_toggle="true"
     layout="topleft"
     left_pad="5"
     right="-10"
     name="delete_btn"
     tool_tip="Delete preset"
     top="3"
     height="18"
     width="18" >
      <button.commit_callback
        function="CameraPresets.Delete"/>
    </button>
  <button
   follows="right"
   image_selected="Refresh_Off"
   image_pressed="Refresh_Off"
   image_unselected="Refresh_Off"
   is_toggle="true"
   layout="topleft"
   left_pad="5"
   right="-10"
   name="reset_btn"
   tool_tip="Reset preset to default"
   top="2"
   height="20"
   width="20" >
    <button.commit_callback
      function="CameraPresets.Reset"/>
  </button>
</panel>
