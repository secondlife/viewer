<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu 
     name="menu_blocked_view"
     left="0" bottom="0" visible="false"
     mouse_opaque="false">
  <menu_item_check
   label="Sort by name"
   name="sort_by_name">
      <on_click
       function="Block.Action"
       parameter="sort_by_name"/>
      <on_check
       function="Block.Check"
       parameter="sort_by_name"/>
  </menu_item_check>
  <menu_item_check
   label="Sort by type"
   name="sort_by_type">
      <on_click
       function="Block.Action"
       parameter="sort_by_type" />
      <on_check
       function="Block.Check"
       parameter="sort_by_type" />
  </menu_item_check>
</toggleable_menu>
