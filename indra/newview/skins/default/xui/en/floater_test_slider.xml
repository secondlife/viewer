     height="20"
     label="Callback Slider"
     layout="topleft"
     left_delta="0"
     name="callback_slider"
     top_pad="20"
     width="400">
        <slider.mouse_up_callback
         function="Test.TestCallback"
         parameter="test" />
    </slider>
