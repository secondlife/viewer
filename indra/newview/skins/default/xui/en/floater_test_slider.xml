     height="20"
     label="Mini Slider 2"
     layout="topleft"
     left_pad="20"
     name="mini_slider_2"
     top_delta="0"
     width="200" />
    <slider_bar
     bottom="320"
     height="100"
     left="20"
     name="slider_bar_vertical"
     orientation="vertical"
     width="20" />
    <slider_bar
     bottom="300"
     height="20"
     increment="1"
     initial_value="2.0"
     label="Slider Bar"
     layout="topleft"
     max_val="5"
     min_val="1"
     left_pad="20"
     name="slider_bar"
     width="300" />
    <slider
     bottom="360"
     decimal_digits="1"
     height="20"
