<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!-- Side tray panel -->
<panel
 follows="all"
 height="449"
 label="People"
 layout="topleft"
 left="0"
 min_height="350"
 name="people_panel"
 top="0"
 width="333">
