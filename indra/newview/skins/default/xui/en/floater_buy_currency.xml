        http://secondlife.com/account/billing.php
    </floater.string>
    <icon
     height="215"
     image_name="Linden_Dollar_Background"
     layout="topleft"
     left="0"
     name="normal_background"
     top="17"
     width="350" />
   <text
     type="string"
     length="1"
     follows="top|left"
