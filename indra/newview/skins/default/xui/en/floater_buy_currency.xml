<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<floater
 can_minimize="false"
 height="275"
 layout="topleft"
 name="buy currency"
 help_topic="buy_linden_dollars"
 single_instance="true"
 title="Buy L$"
 width="350">
    <floater.string
     name="buy_currency">
        Buy L$ [LINDENS] for approx. [LOCALAMOUNT]
