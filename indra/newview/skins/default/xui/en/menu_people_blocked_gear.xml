       function="Block.Action"
       parameter="block_obj_sounds" />
      <on_enable
       function="Block.Enable"
       parameter="block_obj_sounds" />
      <on_visible
       function="Block.Visible"
       parameter="block_obj_sounds" />
  </menu_item_check>

  <menu_item_separator />
  <menu_item_call
   label="Profile..."
   name="profile">
      <on_click
       function="Block.Action"
       parameter="profile_item"/>
      <on_enable
       function="Block.Enable"
       parameter="profile_item" />
  </menu_item_call>
</toggleable_menu>
