<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  legacy_header_height="18"
  can_resize="false"
  height="400"
  layout="topleft"
  min_height="175"
  min_width="100"
  name="floater_moderation"
  help_topic="contents"
  title="Moderation Controls"
  width="600">
    <button
        right="-10"
        top="24"
        height="23"
        width="20"
        image_overlay="Refresh_Off"
        name="refresh_list_btn"
        tool_tip="Refresh Resident List" />
    <button
        right="-40"
        top="23"
        height="23"
        width="50"
        label="None"
        name="select_none_btn"
        tool_tip="Select None" />
    <button
        right="-100"
        top="23"
        height="23"
        width="50"
        label="All"
        name="select_all_btn"
        tool_tip="Select All" />
    <scroll_list
       top="50"
       height="240"
       draw_stripes="true"
       draw_heading="true"
       follows="all"
       layout="topleft"
       left="8"
       multi_select="true"
       name="moderation_resident_info_list"
       right="-8"
       tool_tip="Moderation Resident Info">
        <scroll_list.columns
             dynamic_width="false"
             label="ID"
             name="id_column"
             relative_width="0.0" />
        <scroll_list.columns
             dynamic_width="false"
             label="Number"
             name="number_column"
             relative_width="0.05" />
        <scroll_list.columns
             dynamic_width="true"
             label="Name"
             name="name_column"
             relative_width="0.3" />
        <scroll_list.columns
             dynamic_width="true"
             label="Age (Yrs)"
             name="account_age_column"
             relative_width="0.175" />
        <scroll_list.columns
             dynamic_width="true"
             label="Distance (m)"
             name="distance_column"
             relative_width="0.15" />
        <scroll_list.columns
             dynamic_width="true"
             label="Linden"
             name="linden_column"
             relative_width="0.075" />
        <scroll_list.columns
             dynamic_width="true"
             label="Muted"
             name="voice_muted_column"
             relative_width="0.075" />
        <scroll_list.columns
             dynamic_width="true"
             label="Loudness"
             name="recent_loudness_column"
             relative_width="0.15" />
    </scroll_list>
    <button
      height="20"
      label="Mute Selected"
      layout="topright"
      bottom="-320"
      left="10"
      name="mute_residents_btn"
      width="120" />
    <button
      height="20"
      label="Unmute Selected"
      layout="topright"
      bottom="-345"
      left="10"
      name="unmute_residents_btn"
      width="120" />
    <button
      height="20"
      label="Profile"
      layout="topright"
      bottom="-320"
      right="-10"
      name="show_resident_profile_btn"
      width="80" />
    <button
      height="20"
      label="Track"
      layout="topright"
      bottom="-345"
      right="-10"
      name="track_resident_btn"
      width="80" />
    <button
      height="20"
      label="Close"
      layout="topright"
      bottom="-390"
      right="-10"
      name="close_btn"
      width="80" />
</floater>
